


<h2>
  <%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="badge badge-info">retired</span>
  <% end %>
</h2>

<p>
  <em>
    Established at <%= @brewery.year %>
  </em>
</p>

<p>
  Number of beers <%= @brewery.beers.count %>
</p>



<p>
  <% @brewery.beers.each do |beer| %>
  <!--  <%= link_to beer.name, beers_path+"/"+beer.id.to_s %> -->
    <%= link_to beer.name, beer %>
    <!--<%= link_to beer.name+ 2.to_s, beer %>-->
  <% end %>
</p>

<p>
  <% if  @brewery.raitings.empty? %>
    This Brewery is rather poor (or new). So please help this website to achieve world domination and rate some beers from this Brewery.
  <% else %>
    This brewery's beers have recived combined <%= @brewery.raitings.count %> <%= "raiting".pluralize(@brewery.raitings.count) %> with avarage score of <%= round(@brewery.average_raiting)  %>
  <% end %>
</p>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class:"btn btn-primary" %>
<%= edit_destroy_buttons(@brewery) %>
<%= link_to 'Back', breweries_path %>
